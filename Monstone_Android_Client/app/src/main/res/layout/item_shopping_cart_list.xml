<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/layout_gray_me"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15sp"
        android:paddingRight="15sp">

        <TextView
            android:id="@+id/img_portrait_product_list_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:textColor="#000000"
            android:textSize="14sp"
            android:text="卖家"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="10sp"
            android:text="queky1024"
            android:textColor="#666666"
            android:textSize="14sp"
            android:layout_alignBottom="@+id/price_fresh_home_list_view"
            android:layout_toRightOf="@+id/img_portrait_product_list_item"
            android:layout_toEndOf="@+id/img_portrait_product_list_item"
            android:id="@+id/seller_shopping_cart_list_item"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥1599.00"
            android:textColor="#dd0000"
            android:textSize="16sp"
            android:padding="10sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/price_shopping_cart_list_view" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/layout_gray_me"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15sp"
        android:paddingRight="15sp">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/img_shopping_cart_list"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:padding="15sp"
            android:textSize="14sp"
            android:text="小米5s 4+128G 高配全网通双卡移动联通电信手机 外壳有轻微磕碰 功能正常"
            android:maxLines="3"
            android:id="@+id/title_shopping_cart_list"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/layout_gray_me"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:text="来自：北京 海淀 清华东路35号 北京林业大学"
            android:textSize="12sp"
            android:maxLines="3"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:id="@+id/location_shopping_cart_list_item"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="取消交易"
            android:textColor="#666666"
            android:id="@+id/btn_cancel_shopping_cart_list"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="确认交易"
            android:textColor="@color/colorPrimary"
            android:id="@+id/btn_submit_shopping_cart_list"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5sp"
        android:background="#dddddd"
        android:id="@+id/product_divided_view"/>
</LinearLayout>